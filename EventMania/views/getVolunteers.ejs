<!DOCTYPE html>
<html>
<head>
	<title>Home</title>
	<style type="text/css">
		
		.card{
			margin-right: 9vh;
			margin-bottom: 10vh;
			margin-top: 5vh;			
		}

	</style>
</head>
<body style="background-color: gray; ">
	
	<div>
		
		<% include navbar.ejs ;%>

	<div>
	
	<div>
		<div class="container" style="margin-top: 15vh;">
			<h4>Event Details</h4>
				  <div id="accordion">
				    <div class="card">
				    	<a class="card-link" data-toggle="collapse" href="#volunteer_list">
					      	<div class="card-header">
					          Volunteer List
					      	</div>
				      </a>
				      <div id="volunteer_list" class="collapse" data-parent="#accordion">
				        <div class="card-body">
				          	<div class="container">
							  <table class="table table-striped">
							    <thead>
							      <tr>
							        <th>Firstname</th>
							        <th>Lastname</th>
							        <th>Contact Number</th>
							      </tr>
							    </thead>
							    <tbody>
							    	<% volunteers.forEach(function(volunteer){ %>
							      <tr>
							        <td><%= volunteer.fname %></td>
							        <td><%= volunteer.lname %></td>
							        <td><%= volunteer.contactNo %></td>
							      </tr>
							      <% }); %>
							    </tbody>
							  </table>
							  <button class="btn btn-success" href="/organiser/download">Download CSV</button>
							</div>
				        </div>
				      </div>
				    </div>
				   
				  </div>
				</div>
	</div>


</body>


</html>